    "hono": "^4.8.9",
    "mysql2": "^3.18.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  }
}
